<UserControl x:Class="Warewolf.Studio.Views.ExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Warewolf.Studio.Views.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:data="clr-namespace:Dev2.Common.Interfaces.Data;assembly=Dev2.Common.Interfaces"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:igPrim="http://schemas.infragistics.com/xaml/primitives"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Dev2.Common.Interfaces.Studio.ViewModels;assembly=Dev2.Common.Interfaces"
             xmlns:viewModels1="clr-namespace:Warewolf.Studio.ViewModels;assembly=Warewolf.Studio.ViewModels"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             xmlns:interactivity="http://www.codeplex.com/prism"
             x:Name="ExplorerViewControl"
             d:DataContext="{d:DesignInstance Type=viewModels:IExplorerViewModel,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <ContextMenu x:Key="TreeNodeContextMenu">
            <ContextMenu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ContextMenu.ItemsPanel>
            <MenuItem Name="NewDataBaseService" Header="New Database Service" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.DbService}" Visibility="{Binding Path=Data.CanCreateDbService, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewDataBaseSource" Header="New Database Source" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.DbSource}" Visibility="{Binding Path=Data.CanCreateDbSource, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewWebService" Header="New Web Service" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.WebService}" Visibility="{Binding Path=Data.CanCreateWebService, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewWebSource" Header="New Web Source" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.WebSource}" Visibility="{Binding Path=Data.CanCreateWebSource, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewPluginService" Header="New Plugin Service" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.PluginService}" Visibility="{Binding Path=Data.CanCreatePluginService, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewPluginSource" Header="New Plugin Source" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.PluginSource}" Visibility="{Binding Path=Data.CanCreatePluginSource, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Separator></Separator>
            <MenuItem Name="Rename" Header="Rename" Command="{Binding Path=Data.RenameCommand}"
                          CommandParameter="{Binding Data}" Visibility="{Binding Path=Data.CanRename, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="Delete" Header="Delete" Command="{Binding Path=Data.DeleteCommand}"
                          CommandParameter="{Binding Data}" Visibility="{Binding Path=Data.CanDelete, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="Deploy" Header="Deploy" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ig:XamDataTree}}, Path=DataContext.DeployCommand}"
                          CommandParameter="{Binding Path=Data.CanShowVersions}" Visibility="{Binding Path=Data.CanShowVersions, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="ShowHideVersions" Header="{Binding Path=Data.VersionHeader}" Command="{Binding Path=Data.ShowVersionHistory}"
                     CommandParameter="{Binding Data}" Visibility="{Binding Path=Data.CanShowVersions, Converter={StaticResource BoolToVisibilityConverter}}" />
            <MenuItem Name="Rollback" Header="Make Current Version" Command="{Binding Path=Data.RollbackCommand}"
                     CommandParameter="{Binding Data}" Visibility="{Binding Path=Data.IsVersion, Converter={StaticResource BoolToVisibilityConverter}}" />
            <MenuItem Name="Open" Header="Open" Command="{Binding Path=Data.OpenVersionCommand}"
                     CommandParameter="{Binding Data}" Visibility="{Binding Path=Data.IsVersion, Converter={StaticResource BoolToVisibilityConverter}}" />

        </ContextMenu>

<!--        <Style BasedOn="{StaticResource XamDataTreeNodeControlStyle}" TargetType="{x:Type ig:XamDataTreeNodeControl}">-->
<!--            <Setter Property="ContextMenu" Value="{DynamicResource TreeNodeContextMenu}" />-->
<!--            <Setter Property="Visibility" Value="{Binding Node.Data.AreVersionsVisible, Converter={StaticResource BoolToVisibility}}" />            -->
<!--        </Style>-->

        <converters:ResourceTypeToIconConverter x:Key="ResourceTypeToIconConverter" />
        <converters:WidthConverter x:Key="WidthConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">

        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="29" />
            <RowDefinition Height="5" />
            <RowDefinition Height="29" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>


        <!--  URI LOOKUP  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <views:ConnectControlView DataContext="{Binding ConnectControlViewModel}" />
        </Grid>

        <!--  SERVICE FILTER  -->

        <Grid Grid.Row="3" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="29" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Row="0"
                     Grid.Column="0"
                     Text="{Binding SearchText,
                                    Delay=300, UpdateSourceTrigger=PropertyChanged}" />
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Width="25"
                    Height="25"
                    Padding="4"
                    Style="{StaticResource ExplorerButtonStyle}">
                <Image Source="{StaticResource System-Filter-Inverted}" />
            </Button>
            <Button Grid.Row="0"
                    Grid.Column="2"
                    Width="25"
                    Height="25"
                    Command="{Binding RefreshCommand}"
                    Padding="4"
                    Style="{StaticResource ExplorerButtonStyle}">
                <Image Source="{StaticResource System-Refresh-Inverted}" />
            </Button>
        </Grid>



        <!--  EXPLORER TREE  -->

        <ig:XamDataTree x:Name="ExplorerTree"
                        Grid.Row="5"
                        Grid.Column="1"
                        ActiveDataItem="{Binding Path=Environments}"
                        DisplayMemberPath="DisplayName"
                        IsDraggable="True"
                        IsDropTarget="True"
                        ItemsSource="{Binding Environments}"
                        NodeDragDrop="ExplorerTree_OnNodeDragDrop"
                        
                        NodeLineVisibility="Hidden">
            <ig:XamDataTree.EditingSettings>
                <ig:TreeEditingSettings AllowDeletion="False"
                                        AllowEditing="True"
                                        IsEnterKeyEditingEnabled="True"
                                        IsF2EditingEnabled="True"
                                        IsMouseActionEditingEnabled="None"
                                        IsOnNodeActiveEditingEnabled="False" />
            </ig:XamDataTree.EditingSettings>


            <ig:XamDataTree.GlobalNodeLayouts>


                <ig:NodeLayout Key="Environments"
                               DisplayMemberPath="DisplayName"
                               TargetTypeName="IEnvironmentViewModel"
                                 
                               >
                    <ig:NodeLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="2" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Row="0"
                                       Grid.Column="0"
                                       Width="18"
                                       Height="18"
                                       Source="{StaticResource System-Logo}" />
                                <TextBlock Grid.Row="0"
                                           Grid.Column="2"
                                           FontSize="12"
                                           FontWeight="DemiBold"
                                           Text="{Binding Data.DisplayName}" />
                            </Grid>
                        </DataTemplate>
                    </ig:NodeLayout.ItemTemplate>
                </ig:NodeLayout>

                <ig:NodeLayout Key="Children"
                               DisplayMemberPath="ResourceName"
                               TargetTypeName="IExplorerItemViewModel"
                               Visibility="{Binding Path=Data.IsVisible,
                                                    Converter={StaticResource BoolToVisibilityConverter}}"
                               IsExpandedMemberPath="IsExpanded"
>

                    <ig:NodeLayout.HeaderTemplate>
                        <DataTemplate />
                    </ig:NodeLayout.HeaderTemplate>
                    <ig:NodeLayout.ItemTemplate>
                        <DataTemplate>
                            <DataTemplate.Triggers>
                                <EventTrigger RoutedEvent="ig:XamDataTreeNodeControl.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                           AutoReverse="True"
                                                                           Storyboard.TargetName="EditPermissionImage"
                                                                           Storyboard.TargetProperty="Source">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Permission-Enabled}">
                                                   
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                        AutoReverse="True"
                                                                           Storyboard.TargetName="ExecutePermissionImage"
                                                                           Storyboard.TargetProperty="Source">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Explorer-Run-Enabled}">

                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="ig:XamDataTreeNodeControl.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                           AutoReverse="True"
                                                                           Storyboard.TargetName="EditPermissionImage"
                                                                           Storyboard.TargetProperty="Source">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}">
                                                   
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Duration="0"
                                                                        AutoReverse="True"
                                                                           Storyboard.TargetName="ExecutePermissionImage"
                                                                           Storyboard.TargetProperty="Source">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource System-Spacer}">

                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </DataTemplate.Triggers>
                            <DockPanel Height="14" Margin="0,0,0,0">
                                <DockPanel.Width>
                                    <MultiBinding Converter="{StaticResource WidthConverter}">
                                        <Binding RelativeSource="{RelativeSource AncestorType={x:Type ig:XamDataTreeNodeControl}}" />
                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType={x:Type ig:XamDataTree}}" />
                                    </MultiBinding>
                                </DockPanel.Width>
                                <Button Width="14"
                                        Height="14"
                                        Margin="0,0,5,0"
                                        HorizontalAlignment="Right"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        DockPanel.Dock="Right"
                                        Style="{StaticResource ExplorerTreeButtonStyle}"
                                        Visibility="{Binding Data.CanExecute, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Image x:Name="ExecutePermissionImage" Width="14"
                                           Height="14"
                                           Source="{StaticResource System-Spacer}"
                                           Stretch="Fill"
                                           />
                                </Button>
                                <Button Width="14"
                                        Height="14"
                                        Margin="0,0,5,0"
                                  
                                        HorizontalAlignment="Right"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        DockPanel.Dock="Right"
                                        Style="{StaticResource ExplorerTreeButtonStyle}"
                                        Visibility="{Binding Data.CanEdit}">
                                    <Image x:Name="EditPermissionImage" Width="14"
                                           Height="14"
                                           Source="{StaticResource System-Spacer}"
                                           Stretch="Fill" 
                                           />
                                </Button>
                                <Image Width="14"
                                       Height="14"
                                       Margin="0,0,5,0"
                                       Source="{Binding Data.ResourceType,
                                                        Converter={StaticResource ResourceTypeToIconConverter}}" />
                                <TextBlock MinWidth="5"
                                           Text="{Binding Path=Data.ResourceName}"
                                           Visibility="{Binding Path=Data.IsNotRenaming,
                                                                    Converter={StaticResource BoolToVisibilityConverter}}" >
                                                <i:Interaction.Triggers >
                                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                                     <interactivity:InvokeCommandAction Command="{Binding Path=Data.Expand}" TriggerParameterPath="ClickCount" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                     </TextBlock>
                              
                                <TextBox Name="PropertySearch"
                                         MinWidth="5"
                                         IsVisibleChanged="UIElement_OnIsVisibleChanged"
                                         
                                         Text="{Binding Path=Data.ResourceName,
                                                        UpdateSourceTrigger=LostFocus}"
                                         Visibility="{Binding Path=Data.IsRenaming,
                                                              Converter={StaticResource BoolToVisibilityConverter}}"
                                         views:FocusExtension.IsFocused="{Binding Path=Data.IsRenaming}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="LostFocus">
                                            <i:InvokeCommandAction Command="{Binding Path=Data.LostFocus}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
  
                            </DockPanel>

                        </DataTemplate>
                    </ig:NodeLayout.ItemTemplate>
                    <ig:NodeLayout.ExpandedIconTemplate>
                        <DataTemplate />
                    </ig:NodeLayout.ExpandedIconTemplate>
                    <ig:NodeLayout.CollapsedIconTemplate>
                        <DataTemplate />
                    </ig:NodeLayout.CollapsedIconTemplate>
                </ig:NodeLayout>
                <!--  <ig:NodeLayout Key="Versions" IsExpandedMemberPath="AreVersionsVisible"  DisplayMemberPath="VersionHeader"  TargetTypeName="VersionInfoViewModel">  -->
                <!--  NodeStyle="{StaticResource NodeStyle}">  -->

                <!--  Visibility="{Binding Path=Data.AreVersionsVisible, RelativeSource={RelativeSource AncestorType=ig:XamDataTreeNode} ,Converter={StaticResource BoolToVisibilityConverter}}"  -->
                <!--  >  -->
                <!--
                    <ig:NodeLayout.HeaderTemplate>
                    <DataTemplate></DataTemplate>
                    </ig:NodeLayout.HeaderTemplate>
                    <ig:NodeLayout.ItemTemplate >
                    <DataTemplate DataType="viewModels1:VersionInfoViewModel">
                    <StackPanel  Orientation="Horizontal" >
                    <TextBlock Text="{Binding Path=Data.VersionHeader}" />
                    </StackPanel>
                    
                    </DataTemplate>
                    </ig:NodeLayout.ItemTemplate>
                    </ig:NodeLayout>
                -->
            </ig:XamDataTree.GlobalNodeLayouts>

        </ig:XamDataTree>



    </Grid>
</UserControl>