<UserControl x:Class="Warewolf.Studio.Views.ExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Dev2.Common.Interfaces.Studio.ViewModels;assembly=Dev2.Common.Interfaces"
             xmlns:data="clr-namespace:Dev2.Common.Interfaces.Data;assembly=Dev2.Common.Interfaces"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             x:Name="ExplorerViewControl"
             d:DataContext="{d:DesignInstance Type=viewModels:IExplorerViewModel,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <ContextMenu x:Key="TreeNodeContextMenu">
            <ContextMenu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ContextMenu.ItemsPanel>
            <MenuItem Name="NewDataBaseService" Header="New Database Service" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.DbService}" Visibility="{Binding Path=Data.CanCreateDbService, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewDataBaseSource" Header="New Database Source" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.DbSource}" Visibility="{Binding Path=Data.CanCreateDbSource, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewWebService" Header="New Web Service" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.WebService}" Visibility="{Binding Path=Data.CanCreateWebService, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewWebSource" Header="New Web Source" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.WebSource}" Visibility="{Binding Path=Data.CanCreateWebSource, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewPluginService" Header="New Plugin Service" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.PluginService}" Visibility="{Binding Path=Data.CanCreatePluginService, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="NewPluginSource" Header="New Plugin Source" Command="{Binding Path=Data.NewCommand}"
                          CommandParameter="{x:Static data:ResourceType.PluginSource}" Visibility="{Binding Path=Data.CanCreatePluginSource, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Separator></Separator>
            <MenuItem Name="Rename" Header="Rename" Command="{Binding Path=Data.RenameCommand}"
                          CommandParameter="{Binding Data}" Visibility="{Binding Path=Data.CanRename, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="Delete" Header="Delete" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ig:XamDataTree}}, Path=DataContext.DeleteCommand}"
                          CommandParameter="{Binding Data}" Visibility="{Binding Path=Data.CanDelete, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <MenuItem Name="Deploy" Header="Deploy" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ig:XamDataTree}}, Path=DataContext.DeployCommand}"
                          CommandParameter="{Binding Data}" Visibility="{Binding Path=Data.CanDeploy, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </ContextMenu>
        <Style TargetType="{x:Type ig:XamDataTreeNodeControl}">
            <Setter Property="ContextMenu" Value="{StaticResource TreeNodeContextMenu}"/>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">

        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="29" />
            <RowDefinition Height="5" />
            <RowDefinition Height="29" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>


        <!--  URI LOOKUP  -->
        <Grid Grid.Row="1"  Grid.Column="1">
            <views:ConnectControlView DataContext="{Binding ConnectControlViewModel}"/>
        </Grid>

        <!--  SERVICE FILTER  -->

        <Grid Grid.Row="3" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="29"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Grid.Row="0"  Text="Filter" />
            <Button Width="25"  Grid.Column="1" Grid.Row="0" Style="{StaticResource ExplorerButtonStyle}"
                    Height="25"
                    Padding="4">
                <Image Source="{StaticResource System-Filter-Inverted}" />
            </Button>
            <Button Width="25" Grid.Column="2" Grid.Row="0" Style="{StaticResource ExplorerButtonStyle}"
                    Height="25"
                    Padding="4">
                <Image Source="{StaticResource System-Refresh-Inverted}" />
            </Button>
        </Grid>



        <!--  URL Display  -->
        <StackPanel Grid.Row="5"
                    Grid.Column="1"
                    Style="{StaticResource ExplorerStackPanel}">
            <Label Margin="5,0,2,0"
                   Content="Localhost"
                   FontWeight="Medium" />
            <Label Content="(http://whereiswally:7262)" FontWeight="Light" />
        </StackPanel>


        <ig:XamDataTree 
            x:Name="ExplorerTree"
         Grid.Row="6"
         Grid.Column="1"
         DisplayMemberPath="DisplayName"
         ActiveDataItem="{Binding Path=Environments}"
         ItemsSource="{Binding Environments}"
         NodeLineVisibility="Hidden">
            <ig:XamDataTree.EditingSettings>
                <ig:TreeEditingSettings
                    AllowDeletion="False"
                    AllowEditing="True"
                    IsMouseActionEditingEnabled="None"
                    IsEnterKeyEditingEnabled="True"
                    IsF2EditingEnabled="True"
                    IsOnNodeActiveEditingEnabled="True"
                    />
            </ig:XamDataTree.EditingSettings>
            <ig:XamDataTree.GlobalNodeLayouts >
                <ig:NodeLayout Key="ExplorerItemViewModels"
                               DisplayMemberPath="DisplayName"
                               
                              >                    
                    <ig:NodeLayout.ItemTemplate>
                        <DataTemplate DataType="viewModels:IExplorerItemViewModel"   >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Data.ResourceName}" />
                                <TextBlock Text="{Binding Data.Children.Count}" />                               
                            </StackPanel>
                        </DataTemplate>
                    </ig:NodeLayout.ItemTemplate>
                   <ig:NodeLayout.EditorTemplate >
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Visibility="{Binding Path=Data.IsRenaming, Converter={StaticResource BoolToVis}}">
                                <TextBox Text="{Binding Path=Data.DisplayName}" Visibility="{Binding Path=Data.IsRenaming, Converter={StaticResource BoolToVis}}"></TextBox>
                                <TextBlock Text="{Binding Data.ResourceName}" />
                                <TextBlock Text="{Binding Data.Children.Count}" />
                            </StackPanel>
                        </DataTemplate>
                    </ig:NodeLayout.EditorTemplate>

                </ig:NodeLayout>
                <ig:NodeLayout Key="Children" DisplayMemberPath="ResourceName">

                    <ig:NodeLayout.ItemTemplate >
                        <DataTemplate DataType="viewModels:IExplorerItemViewModel">
                            <StackPanel>

                                <TextBox Text="{Binding Path=Data.ResourceName}" Visibility="{Binding Path=Data.IsRenaming, Converter={StaticResource BoolToVis}}"></TextBox>
                                <Grid  Visibility="{Binding Path=Data.IsNotRenaming, Converter={StaticResource BoolToVis}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.60*" />
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.10*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Image Grid.Column="0"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-New}" />
                                    <Image Grid.Column="1"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Spacer}" />
                                    <TextBlock Grid.Column="2" Text="{Binding Data.ResourceName}" >
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding Data.OpenCommand}" CommandParameter="{Binding Data}"></MouseBinding>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                    <Image Grid.Column="3"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Spacer}" />
                                    <Image Grid.Column="4"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Executable-Disabled}" />
                                    <Image Grid.Column="5"
                                       Width="5"
                                       Height="12"
                                       Source="{StaticResource System-Spacer}" />
                                    <Image Grid.Column="6"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Security-Enabled}" />
                                </Grid>
                            </StackPanel>

                        </DataTemplate>
                    </ig:NodeLayout.ItemTemplate>
                    <ig:NodeLayout.EditorTemplate>
                        <DataTemplate >
                            <StackPanel>
                           
                                <TextBox Text="{Binding Path=Data.ResourceName}" Visibility="{Binding Path=Data.IsRenaming, Converter={StaticResource BoolToVis}}"></TextBox>
                                <Grid  Visibility="{Binding Path=Data.IsNotRenaming, Converter={StaticResource BoolToVis}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.60*" />
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.10*" />
                                        <ColumnDefinition Width="0.10*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Image Grid.Column="0"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-New}" />
                                    <Image Grid.Column="1"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Spacer}" />
                                    <TextBlock Grid.Column="2" Text="{Binding Data.ResourceName}" >
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding Data.OpenCommand}" CommandParameter="{Binding Data}"></MouseBinding>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                    <Image Grid.Column="3"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Spacer}" />
                                    <Image Grid.Column="4"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Executable-Disabled}" />
                                    <Image Grid.Column="5"
                                       Width="5"
                                       Height="12"
                                       Source="{StaticResource System-Spacer}" />
                                    <Image Grid.Column="6"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Security-Enabled}" />
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ig:NodeLayout.EditorTemplate>
                </ig:NodeLayout>

            </ig:XamDataTree.GlobalNodeLayouts>

            <!--
                <ig:XamDataTree.GlobalNodeLayouts>
                <ig:NodeLayout Key="ExplorerItemViewModels"
                DisplayMemberPath="ResourceName">
                <ig:NodeLayout.ExpandedIconTemplate>
                <DataTemplate>
                <Image Source="StaticResource System-DB}" />
                </DataTemplate>
                </ig:NodeLayout.ExpandedIconTemplate>
                <ig:NodeLayout.CollapsedIconTemplate>
                <DataTemplate>
                <Image Source="StaticResource System-DB}" />
                </DataTemplate>
                </ig:NodeLayout.CollapsedIconTemplate>
                </ig:NodeLayout>
                <ig:NodeLayout Key="Children"
                DisplayMemberPath="ResourceName">
                <ig:NodeLayout.ExpandedIconTemplate>
                <DataTemplate>
                <Image Source="StaticResource Utility-Path}" />
                </DataTemplate>
                </ig:NodeLayout.ExpandedIconTemplate>
                <ig:NodeLayout.CollapsedIconTemplate>
                <DataTemplate>
                <Image Source="StaticResource Utility-Path}" />
                </DataTemplate>
                </ig:NodeLayout.CollapsedIconTemplate>
                </ig:NodeLayout>
                </ig:XamDataTree.GlobalNodeLayouts>
            -->


        </ig:XamDataTree>



    </Grid>
</UserControl>