<UserControl x:Class="Warewolf.Studio.Views.ExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dockManager="http://infragistics.com/DockManager"
             xmlns:dummyModels="clr-namespace:Warewolf.Studio.ViewModels.DummyModels;assembly=Warewolf.Studio.ViewModels"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="ExplorerViewControl"
             d:DataContext="{d:DesignInstance Type=dummyModels:DummyExplorerViewModel,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">


    <Grid x:Name="LayoutRoot">

        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="29" />
            <RowDefinition Height="5" />
            <RowDefinition Height="29" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>


        <!--  URI LOOKUP  -->
        <Grid Grid.Row="1"  Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="29"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Grid.Row="0"  Text="Localhost" />
            <Button Width="25"  Grid.Column="1" Grid.Row="0" Style="{StaticResource ExplorerButtonStyle}"
                    Height="25"
                    Padding="4">
                <Image Source="{StaticResource System-More-Inverted}" />
            </Button>
            <Button Width="25" Grid.Column="2" Grid.Row="0" Style="{StaticResource ExplorerButtonStyle}"
                    Height="25"
                    Padding="4">
                <Image Source="{StaticResource System-Link-Inverted}" />
            </Button>
        </Grid>

        <!--  SERVICE FILTER  -->

        <Grid Grid.Row="3" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="29"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Grid.Row="0"  Text="Filter" />
            <Button Width="25"  Grid.Column="1" Grid.Row="0" Style="{StaticResource ExplorerButtonStyle}"
                    Height="25"
                    Padding="4">
                <Image Source="{StaticResource System-Filter-Inverted}" />
            </Button>
            <Button Width="25" Grid.Column="2" Grid.Row="0" Style="{StaticResource ExplorerButtonStyle}"
                    Height="25"
                    Padding="4">
                <Image Source="{StaticResource System-Refresh-Inverted}" />
            </Button>
        </Grid>



        <!--  URL Display  -->
        <StackPanel Grid.Row="5"
                    Grid.Column="1"
                    Style="{StaticResource ExplorerStackPanel}">
            <Label Margin="5,0,2,0"
                   Content="Localhost"
                   FontWeight="Medium" />
            <Label Content="(http://whereiswally:7262)" FontWeight="Light" />
        </StackPanel>


        <ig:XamDataTree 
         Grid.Row="6"
         Grid.Column="1"
                DisplayMemberPath="DisplayName"
                        ItemsSource="{Binding Environments}"
                        NodeLineVisibility="Hidden">
            <ig:XamDataTree.EditingSettings>
                <ig:TreeEditingSettings
                    AllowDeletion="False"
                    AllowEditing="{Binding Path=AllowEditing}"
                    IsEnterKeyEditingEnabled="False"
                    IsF2EditingEnabled="True"
                    IsOnNodeActiveEditingEnabled="False" />
            </ig:XamDataTree.EditingSettings>
            <ig:XamDataTree.GlobalNodeLayouts>
                <ig:NodeLayout Key="ExplorerItemViewModels"
                               DisplayMemberPath="DisplayName"
                               TargetTypeName="ResourceName">

                    <ig:NodeLayout.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="????" />
                                <TextBlock Text=" [18]" />
                            </StackPanel>
                        </DataTemplate>
                    </ig:NodeLayout.ItemTemplate>
                    <ig:NodeLayout.EditorTemplate>
                        <DataTemplate>
                            <TextBox></TextBox>
                        </DataTemplate>
                    </ig:NodeLayout.EditorTemplate>

                </ig:NodeLayout>
                <ig:NodeLayout Key="Children" DisplayMemberPath="ResourceName">

                    <ig:NodeLayout.ItemTemplate>
                        <DataTemplate>


                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.10*" />
                                    <ColumnDefinition Width="0.10*" />
                                    <ColumnDefinition Width="0.60*" />
                                    <ColumnDefinition Width="0.10*" />
                                    <ColumnDefinition Width="0.10*" />
                                    <ColumnDefinition Width="0.10*" />
                                    <ColumnDefinition Width="0.10*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Image Grid.Column="0"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-New}" />
                                <Image Grid.Column="1"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Spacer}" />
                                <TextBlock Grid.Column="2" Text="File and Folder" />
                                <Image Grid.Column="3"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Spacer}" />
                                <Image Grid.Column="4"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Executable-Disabled}" />
                                <Image Grid.Column="5"
                                       Width="5"
                                       Height="12"
                                       Source="{StaticResource System-Spacer}" />
                                <Image Grid.Column="6"
                                       Width="12"
                                       Height="12"
                                       Source="{StaticResource System-Security-Enabled}" />
                            </Grid>

                        </DataTemplate>
                    </ig:NodeLayout.ItemTemplate>

                </ig:NodeLayout>

            </ig:XamDataTree.GlobalNodeLayouts>

            <!--
                <ig:XamDataTree.GlobalNodeLayouts>
                <ig:NodeLayout Key="ExplorerItemViewModels"
                DisplayMemberPath="ResourceName">
                <ig:NodeLayout.ExpandedIconTemplate>
                <DataTemplate>
                <Image Source="StaticResource System-DB}" />
                </DataTemplate>
                </ig:NodeLayout.ExpandedIconTemplate>
                <ig:NodeLayout.CollapsedIconTemplate>
                <DataTemplate>
                <Image Source="StaticResource System-DB}" />
                </DataTemplate>
                </ig:NodeLayout.CollapsedIconTemplate>
                </ig:NodeLayout>
                <ig:NodeLayout Key="Children"
                DisplayMemberPath="ResourceName">
                <ig:NodeLayout.ExpandedIconTemplate>
                <DataTemplate>
                <Image Source="StaticResource Utility-Path}" />
                </DataTemplate>
                </ig:NodeLayout.ExpandedIconTemplate>
                <ig:NodeLayout.CollapsedIconTemplate>
                <DataTemplate>
                <Image Source="StaticResource Utility-Path}" />
                </DataTemplate>
                </ig:NodeLayout.CollapsedIconTemplate>
                </ig:NodeLayout>
                </ig:XamDataTree.GlobalNodeLayouts>
            -->


        </ig:XamDataTree>



    </Grid>
</UserControl>