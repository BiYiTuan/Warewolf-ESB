<ig:XamDialogWindow x:Class="Warewolf.Studio.Views.DialogWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    xmlns:ig="http://schemas.infragistics.com/xaml"
                    xmlns:interfaces="clr-namespace:Dev2.Common.Interfaces.Studio.ViewModels.Dialogues;assembly=Dev2.Common.Interfaces"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:viewModels="clr-namespace:Warewolf.Studio.ViewModels;assembly=Warewolf.Studio.ViewModels"
                    xmlns:views="clr-namespace:Warewolf.Studio.Views"
                    Width="700"
                    Height="420"
                    Style="{StaticResource XamDialogWindowStyle}"
                    mc:Ignorable="d">

    <ig:XamDialogWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <DataTemplate DataType="{x:Type viewModels:NewServerViewModel}">
            <views:ServerUserControl />
        </DataTemplate>
    </ig:XamDialogWindow.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <!--  HEADER PANEL  -->
        <Grid Grid.Row="0" Background="{StaticResource WarewolfPanelGreyBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="24" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                            Style="{StaticResource TextPanelHeaderStyle}"
                           Text="{Binding Path=InnerDialogue.HeaderText}"
                           Visibility="Visible" />
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Style="{StaticResource TextPanelSubHeaderStyle}"
                           Text="{Binding Path=InnerDialogue.SubHeaderText}"
                           Visibility="Visible" />
            </Grid>
        </Grid>

        <!--EMBEDDED CLIENT PANEL-->
        <Grid Grid.Row="1">
            <ContentPresenter Content="{Binding InnerDialogue}" />
        </Grid>


        <!--FOOTER PANEL-->
        <Grid Grid.Row="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="5" />
                <RowDefinition Height="30" />
                <RowDefinition Height="24" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="24" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">

                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Style="{StaticResource ErrorTextBlockStyle}"
                           Text="{Binding Path=InnerDialogue.Validate}"
                           TextAlignment="Right" />

                <Button HorizontalAlignment="Right"
                        Margin="5,0,0,0"
                        Width="60"
                        Height="30"
                        Command="{Binding Path=InnerDialogue.OkCommand}"
                        Content="Save"
                        IsEnabled="{Binding Path=InnerDialogue.CanClickOk}" />
                
                <Button Width="60"
                        Height="30"
                         HorizontalAlignment="Right"
                        Margin="5,0,0,0"
                        Command="{Binding Path=InnerDialogue.CancelCommand}"
                        Content="Cancel" />
                

            </DockPanel>

        </Grid>

    </Grid>
</ig:XamDialogWindow>
