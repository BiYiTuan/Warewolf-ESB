<UserControl x:Class="Warewolf.Studio.Views.ManageDatabaseServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:db="clr-namespace:Dev2.Common.Interfaces.DB;assembly=Dev2.Common.Interfaces"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=db:IManageDbServiceViewModel,
                                              IsDesignTimeCreatable=False}">
    <Grid Margin="{StaticResource ContainerBorder}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0" HorizontalAlignment="Stretch"  >  

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" ></RowDefinition>
                <RowDefinition Height="Auto" ></RowDefinition>
                <RowDefinition Height="40" ></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel  Grid.Row="0" Grid.Column="0"  Background="{StaticResource WareWolfMenuBrush}" HorizontalAlignment="Stretch" Orientation="Horizontal">
                <TextBlock Margin="10"  Text="{Binding DataSourceHeader, Mode=OneWay}" Style="{StaticResource SourceHeader}"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                <ComboBox  ItemsSource="{Binding Sources}" DisplayMemberPath="Name" Width="200" Margin="{StaticResource ElementBorderTop}"  />
                <Button  Command="{Binding EditSourceCommand}" IsEnabled="{Binding CanEditSource}" Content=" ... " Margin="{StaticResource ElementBorderLeftTop}"></Button>
                <TextBlock Text="or" Margin="{StaticResource ElementBorderLeftTop}"></TextBlock>
                <Button  Content="{Binding NewButtonLabel}" Margin="{StaticResource ElementBorderLeftTop}" Command="{Binding CreateNewSourceCommand}" Width="100" ></Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <!-- Select an Source-->
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="40" ></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel  Grid.Row="0" Grid.Column="0"  Background="{StaticResource WareWolfMenuBrush}" HorizontalAlignment="Stretch" Orientation="Horizontal">
                <TextBlock Margin="10" Text="{Binding DataSourceActionHeader, Mode=OneWay}" Style="{StaticResource SourceHeader}" ></TextBlock>
                <!-- Choose data source header-->
            </StackPanel>
            <StackPanel Grid.Row="1" HorizontalAlignment="Left" >
                <!-- Choose data Source Action-->

                <ComboBox Width="200" ItemsSource="{Binding Actions}" Text="Choose" Margin="{StaticResource ElementBorderTop}"></ComboBox>

            </StackPanel>
        </Grid>


        <Grid Grid.Row="3" Grid.Column="0">
            <!-- Test-->
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel  Grid.Row="0" Grid.Column="0"  Background="{StaticResource WareWolfMenuBrush}" HorizontalAlignment="Stretch" Orientation="Horizontal">
                <TextBlock Margin="10" Text="{Binding TestHeader, Mode=OneWay}" Style="{StaticResource SourceHeader}" ></TextBlock>
            </StackPanel>
                <ListBox Width="200" Grid.Row="1"   BorderBrush="Transparent"   DataContext="{Binding Inputs}" >
                    <ListBox.ItemTemplate>
                  
                            <DataTemplate DataType="db:IDbInput">
                                
                                <StackPanel Orientation="Horizontal">
                                <TextBlock  Text="{Binding Path=Name }"></TextBlock>
                                <TextBox Text="{Binding Path=Value}"></TextBox>
                                </StackPanel>
                            </DataTemplate>

                    </ListBox.ItemTemplate>
                </ListBox>
    
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" HorizontalAlignment="Left" Text="{Binding InspectLabel}"></TextBlock>
                <Button Grid.Column="1" HorizontalAlignment="Right" Command="{Binding TestProcedureCommand}">Test</Button>
            </Grid>
           <TextBlock Grid.Row="3" Text="{Binding OutputsLabel}"></TextBlock>
            <DataGrid Grid.Row="4" ></DataGrid>
        </Grid>
        
        <Grid Grid.Row="4" Grid.Column="0">
            <!-- Mappings-->
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <TextBlock  Text="2" ></TextBlock>
                <TextBlock  Text="{Binding MappingNamesHeader, Mode=OneWay}" ></TextBlock>
                <!-- Choose data source header-->
            </StackPanel>
       
            <!-- Choose data Source Action-->
            <TextBlock Grid.Row="1" Text="{Binding InputsLabel}"></TextBlock>
            <TextBlock Grid.Row="2" Text="{Binding InputsLabel}"></TextBlock>
            <DataGrid Grid.Row="3" ></DataGrid>
        </Grid>

    </Grid>
</UserControl>
