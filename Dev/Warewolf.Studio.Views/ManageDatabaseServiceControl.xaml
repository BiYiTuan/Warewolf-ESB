<UserControl x:Class="Warewolf.Studio.Views.ManageDatabaseServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dialogues="clr-namespace:Dev2.Common.Interfaces.Studio.ViewModels.Dialogues;assembly=Dev2.Common.Interfaces"
             xmlns:db="clr-namespace:Dev2.Common.Interfaces.DB;assembly=Dev2.Common.Interfaces"
             xmlns:views="clr-namespace:Warewolf.Studio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=db:IManageDbServiceViewModel,
                                              IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

    
            <Grid Grid.Row="0" HorizontalAlignment="Left" >  <!-- Choose data Source -->

                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" Orientation="Horizontal">
                    <TextBlock  Text="1" ></TextBlock>
                    <TextBlock  Text="{Binding DataSourceHeader}" ></TextBlock>
                    <!-- Choose data source header-->
                </StackPanel>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
               <ComboBox Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Sources}" DisplayMemberPath="Name"></ComboBox>
                <Button Grid.Column="1" Grid.Row="1" Command="{Binding EditSourceCommand}" IsEnabled="{Binding CanEditSource}" Content=" ... "></Button>
                <TextBlock Grid.Column="2"  Grid.Row="1" Text="or"></TextBlock>
                <Button Grid.Column="3"  Grid.Row="1" Content="{Binding NewButtonLabel}"></Button>
                <views:ManageDatabaseSourceControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Visibility="{Binding EditDbSourceVisible}">
                    
                </views:ManageDatabaseSourceControl>
                
            </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <!-- Select an Action-->
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>

            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <TextBlock  Text="2" ></TextBlock>
                <TextBlock  Text="{Binding DataSourceActionHeader}" ></TextBlock>
                <!-- Choose data source header-->
            </StackPanel>
            <StackPanel Grid.Row="1" HorizontalAlignment="Left" >
                <!-- Choose data Source Action-->
     
                <ComboBox ItemsSource="{Binding Actions}" Text="Choose"></ComboBox>

            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0">
            <!-- Select an Action-->
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>

            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <TextBlock  Text="2" ></TextBlock>
                <TextBlock  Text="{Binding DataSourceActionHeader}" ></TextBlock>
                <!-- Choose data source header-->
            </StackPanel>
            <StackPanel Grid.Row="1" HorizontalAlignment="Left" >
                <!-- Choose data Source Action-->

                <ComboBox ItemsSource="{Binding Actions}" Text="Choose"></ComboBox>

            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="0">
            <!-- Select an Action-->
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <TextBlock  Text="2" ></TextBlock>
                <TextBlock  Text="{Binding TestHeader}" ></TextBlock>
                <!-- Choose data source header-->
            </StackPanel>
            <!-- Choose data Source Action-->
            <TextBlock Grid.Row="1" Text="{Binding InputsLabel}"></TextBlock>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBlock Text="FirtName" MinWidth="120"></TextBlock>
                <TextBox Text="" MinWidth="120"></TextBox>
                <TextBlock Text="Surname" MinWidth="120"></TextBlock>
                <TextBox Text="" MinWidth="120"></TextBox>
            </StackPanel>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" HorizontalAlignment="Left" Text="{Binding InspectLabel}"></TextBox>
                <Button Grid.Column="1" HorizontalAlignment="Right">Test</Button>
            </Grid>
           <TextBlock Grid.Row="3" Text="{Binding OutputsLabel}"></TextBlock>
            <DataGrid Grid.Row="4" ></DataGrid>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="0">
            <!-- Select an Action-->
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <TextBlock  Text="2" ></TextBlock>
                <TextBlock  Text="{Binding MappingNamesHeader}" ></TextBlock>
                <!-- Choose data source header-->
            </StackPanel>
       
            <!-- Choose data Source Action-->
            <TextBlock Grid.Row="1" Text="{Binding InputsLabel}"></TextBlock>
            <TextBlock Grid.Row="2" Text="{Binding InputsLabel}"></TextBlock>
            <DataGrid Grid.Row="3" ></DataGrid>
        </Grid>

    </Grid>
</UserControl>
