<ig:XamDialogWindow x:Class="Warewolf.Studio.Views.RequestServiceNameView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    xmlns:ig="http://schemas.infragistics.com/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:viewModels="clr-namespace:Warewolf.Studio.ViewModels;assembly=Warewolf.Studio.ViewModels"
                    xmlns:views="clr-namespace:Warewolf.Studio.Views"
                    xmlns:saveDialog="clr-namespace:Dev2.Common.Interfaces.SaveDialog;assembly=Dev2.Common.Interfaces"
                    Width="700"
                    Height="420"
                    CloseButtonVisibility="Collapsed"
                    MaximizeButtonVisibility="Collapsed"
                    MinimizeButtonVisibility="Collapsed"
                    HeaderIconVisibility="Collapsed"
                    Style="{StaticResource XamDialogWindowStyle}"
                    mc:Ignorable="d"
                    d:DataContext="{d:DesignInstance Type=saveDialog:IRequestServiceNameViewModel,
                                              IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="200" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <!--  HEADER PANEL  -->
        <Grid Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Margin="10,0,0,0"
                           Style="{StaticResource SourceHeader}"
                           Text="Please enter a service name"
                           Visibility="Visible" />
            </Grid>
        </Grid>

        <!--  EMBEDDED CLIENT PANEL  -->
        <Grid Grid.Row="1">
            <views:ExplorerView DataContext="{Binding SingleEnvironmentExplorerViewModel}"/>
        </Grid>

       <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Style="{StaticResource TextPanelSubHeaderStyle}">Name: </TextBlock>
           <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
       </StackPanel>
        <!--  FOOTER PANEL  -->
        <Grid Grid.Row="3">

            <Grid.RowDefinitions>
                <RowDefinition Height="5" />
                <RowDefinition Height="30" />
                <RowDefinition Height="24" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="24" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">

                <TextBlock HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Style="{StaticResource ErrorTextBlockStyle}"
                           Text="{Binding Path=ErrorMessage}"
                           TextAlignment="Right" />

                <Button Width="60"
                        Height="30"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Right"
                        Command="{Binding Path=OkCommand}"
                        Content="Save"
                        />

                <Button Width="60"
                        Height="30"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Right"
                        Command="{Binding Path=CancelCommand}"
                        Content="Cancel" />

            </DockPanel>

        </Grid>

    </Grid>
</ig:XamDialogWindow>
