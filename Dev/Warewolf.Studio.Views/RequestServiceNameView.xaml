<ig:XamDialogWindow x:Class="Warewolf.Studio.Views.RequestServiceNameView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    xmlns:ig="http://schemas.infragistics.com/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:saveDialog="clr-namespace:Dev2.Common.Interfaces.SaveDialog;assembly=Dev2.Common.Interfaces"
                    xmlns:viewModels="clr-namespace:Warewolf.Studio.ViewModels;assembly=Warewolf.Studio.ViewModels"
                    xmlns:views="clr-namespace:Warewolf.Studio.Views"
                    Width="700"
                    Height="420"
                    CloseButtonVisibility="Collapsed"
                    Header="Please enter a service name"
                    HeaderIconVisibility="Collapsed"
                    MaximizeButtonVisibility="Collapsed"
                    MinimizeButtonVisibility="Collapsed"
                    Style="{StaticResource XamDialogWindowStyle}"
                    d:DataContext="{d:DesignInstance Type=saveDialog:IRequestServiceNameViewModel,
                                                     IsDesignTimeCreatable=False}"
                    mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0"
                   Grid.Column="1"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Background="Transparent">

            <!--  EMBEDDED CLIENT PANEL  -->
            <views:ExplorerView HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                DataContext="{Binding SingleEnvironmentExplorerViewModel}" />

        </DockPanel>


        <DockPanel Grid.Row="2"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center">

            <TextBlock Margin="10,0,10,0">Name:</TextBlock>
            <TextBox Width="300" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

        </DockPanel>

        <DockPanel Grid.Row="4"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center">
            <Button x:Name="OkButton"
                    Width="60"
                    Command="{Binding Path=OkCommand}"
                    Content="Ok"
                    Style="{StaticResource ButtonStyle}" />
            <Button x:Name="CancelButton"
                    Width="60"
                    Margin="10,0,10,0"
                    Command="{Binding Path=CancelCommand}"
                    Content="Cancel"
                    Style="{StaticResource ButtonStyle}" />
        </DockPanel>

        <Image Grid.Row="5"
               Grid.Column="0"
               Width="10"
               Height="15"
               Source="{StaticResource System-Spacer}"
               Visibility="Visible" />

    </Grid>
</ig:XamDialogWindow>
