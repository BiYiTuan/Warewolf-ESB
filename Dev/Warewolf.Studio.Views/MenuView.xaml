<UserControl x:Class="Warewolf.Studio.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             ScrollViewer.VerticalScrollBarVisibility="Disabled"
             mc:Ignorable="d">

    <Grid x:Name="Menu"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="{StaticResource MenuPanelGradient}">
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="pack://application:,,,/Warewolf.Studio.Themes.Luna;component/Images/System-New.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.7*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Height="120"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{StaticResource WareWolfMenuBrush}"
                    Orientation="Vertical">
            <Image Width="70"
                   Height="70"
                   Margin="0,40,0,0"
                   Source="{StaticResource System-Logo}" />

        </StackPanel>



        <Separator Grid.Row="1"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="30"
                   Height="30"
                   Source="{StaticResource Menu-System-New}" />
        </Button>

        <Button Grid.Row="3"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="30"
                   Height="30"
                   Source="{StaticResource Menu-System-Save}" />
        </Button>

        <Button Grid.Row="4"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="30"
                   Height="30"
                   Source="{StaticResource Menu-System-Deploy}" />
        </Button>

        <Separator Grid.Row="5"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="6"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="30"
                   Height="30"
                   Source="{StaticResource Menu-System-DB}" />
        </Button>

        <Button Grid.Row="7"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="30"
                   Height="30"
                   Source="{StaticResource Menu-System-DLL}" />
        </Button>

        <Button Grid.Row="8"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="30"
                   Height="30"
                   Source="{StaticResource Menu-System-WebService}" />
        </Button>

        <Separator Grid.Row="9"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="10"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="30"
                   Height="30"
                   Source="{StaticResource Menu-System-Task}" />
        </Button>

        <Button Grid.Row="11"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="30"
                   Height="30"
                   Source="{StaticResource Menu-System-Debug}" />
        </Button>

        <Separator Grid.Row="12"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="13"
                Grid.Column="1"
                Style="{StaticResource SideMenuButtonStyle}">
            <Image Width="30"
                   Height="30"
                   Source="{StaticResource Menu-System-Settings}" />
        </Button>

        <Separator Grid.Row="14"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource MenuSeparator}" />

    </Grid>
</UserControl>
