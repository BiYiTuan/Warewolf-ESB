<UserControl x:Class="Warewolf.Studio.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:data="clr-namespace:Dev2.Common.Interfaces.Data;assembly=Dev2.Common.Interfaces"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:interactivity="http://www.codeplex.com/prism"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:studio="clr-namespace:Dev2.Common.Interfaces.Studio;assembly=Dev2.Common.Interfaces"
             Width="150"
             ScrollViewer.VerticalScrollBarVisibility="Disabled"
             d:DataContext="{d:DesignInstance Type={x:Type studio:IMenuViewModel}}"
             mc:Ignorable="d">

    <Grid x:Name="Menu"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="{StaticResource MenuPanelGradient}">

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeave">
                <interactivity:InvokeCommandAction Command="{Binding SlideClosedCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Image x:Name="LogoImage"
               Grid.Row="1"
               Grid.Column="1"
               Width="35"
               Height="35"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Source="{StaticResource System-Logo}"
               Stretch="Fill" />


        <Separator Grid.Row="2"
                   Grid.ColumnSpan="3"
                   Margin="0,15,0,10"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="3"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,7,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Icon="Plus" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="13,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=NewLabel}" />
            </StackPanel>

        </Button>


        <Image Grid.Row="4"
               Grid.ColumnSpan="3"
               Width="15"
               Height="10"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Button Grid.Row="5"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,7,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Icon="Save" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="13,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=SaveLabel}" />
            </StackPanel>

        </Button>


        <Image Grid.Row="6"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Button Grid.Row="7"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,7,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Icon="PaperPlaneOutlined" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="13,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=DeployLabel}" />
            </StackPanel>

        </Button>


        <Separator Grid.Row="8"
                   Grid.ColumnSpan="3"
                   Margin="0,15,0,10"
                   Style="{StaticResource MenuSeparator}" />


        <Button Grid.Row="9"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,7,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Icon="Database" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="13,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=DatabaseLabel}" />
            </StackPanel>

        </Button>

        <Image Grid.Row="10"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Button Grid.Row="11"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,7,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Icon="Plug" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="13,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=DLLLabel}" />
            </StackPanel>

        </Button>


        <Image Grid.Row="12"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />



        <Button Grid.Row="13"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <Image Height="20"
                       Margin="7,5,5,5"
                       Source="{StaticResource Menu-System-WebService}" />

                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="13,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=WebLabel}" />

            </StackPanel>

        </Button>



        <Image Grid.Row="14"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Separator Grid.Row="15"
                   Grid.ColumnSpan="3"
                   Margin="0,0,0,10"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="16"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,7,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Icon="History" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="13,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=TaskLabel}" />
            </StackPanel>

        </Button>


        <Image Grid.Row="17"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Button Grid.Row="18"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,7,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Icon="Play" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="13,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=DebugLabel}" />
            </StackPanel>

        </Button>


        <Image Grid.Row="19"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Separator Grid.Row="20"
                   Grid.ColumnSpan="3"
                   Margin="0,0,0,10"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="21"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,7,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Icon="Cogs" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="13,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=SettingsLabel}" />
            </StackPanel>

        </Button>


        <Image Grid.Row="22"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Separator Grid.Row="23"
                   Grid.ColumnSpan="3"
                   Margin="0,0,0,10"
                   Style="{StaticResource MenuSeparator}" />

        <Button Grid.Row="24"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,7,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Icon="Question" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           Padding="17,6,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=SupportLabel}" />
            </StackPanel>

        </Button>

        <Image Grid.Row="25"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Separator Grid.Row="26"
                   Grid.ColumnSpan="3"
                   Margin="0,0,0,10"
                   Style="{StaticResource MenuSeparator}" />


        <Button Grid.Row="27"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Style="{StaticResource SideMenuButtonStyle}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding CheckForNewVersionCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseEnter">
                    <interactivity:InvokeCommandAction Command="{Binding SlideOpenCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="7.5,6,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20"
                                    FontWeight="Regular"
                                    Foreground="{StaticResource WareWolfOrangeBrush}"
                                    Icon="ArrowCircleDown" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           FontSize="{StaticResource FontSize-Normal}"
                           Padding="13,7.5,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=NewVersionLabel}" />
            </StackPanel>

