        <Image Grid.Row="28"
               Grid.ColumnSpan="3"
               Width="15"
               Height="5"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />

        <Separator Grid.Row="29"
                   Grid.ColumnSpan="3"
                   Margin="0,0,0,10"
                   Style="{StaticResource MenuSeparator}" />


        <Button Grid.Row="30"
                Grid.Column="1"
                Width="{Binding ButtonWidth}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Command="{Binding LockCommand}"
                Style="{StaticResource SideMenuButtonStyle}">

            <StackPanel Width="{Binding ButtonWidth}"
                        Height="35"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                <TextBlock Height="35"
                           Padding="10,7.5,5,5"
                           Style="{StaticResource MenuTextBoxStyle}">
                    <fa:FontAwesome FontSize="20" Icon="{Binding Path=LockImage}" />
                </TextBlock>
                <TextBlock Height="35"
                           HorizontalAlignment="Left"
                           FontSize="{StaticResource FontSize-Normal}"
                           Padding="13,7.5,0,5"
                           Style="{StaticResource MenuTextBoxStyle}"
                           Text="{Binding Path=LockLabel}" />
            </StackPanel>

        </Button>

        <Image Grid.Row="31"
               Grid.ColumnSpan="3"
               Width="15"
               Height="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="{StaticResource System-Spacer}" />
    </Grid>
</UserControl>
