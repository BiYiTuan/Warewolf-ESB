    <!--  BRUSHES  -->

    <SolidColorBrush x:Key="{x:Static igDock:DockManagerBrushKeys.PaneNotActiveCaptionFillKey}"
                     presentationOptions:Freeze="true"
                     Color="{StaticResource WarewolfHeaderGrey}" />
